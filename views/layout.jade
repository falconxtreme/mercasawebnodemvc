doctype 5
html
  head
    - if (typeof(title) == 'undefined')
        title MERCASA directo a tu casa
    - else 
        title= title
    
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    meta(name='description', content='')

    // include icon Mercasa
    link(rel='icon', href='/icon/mercasa_logo.ico')
    // include Bootstrap and footer files
    link(rel='stylesheet', href='/css/bootstrap.min.css')
    link(rel='stylesheet', href='/stylesheets/mercasa_nav.css')
    script(src='/javascripts/jquery-1.8.3.min.js')
    script(src='/javascripts/modernizr.js')
    // include pajinate file
    link(rel='stylesheet', href='/stylesheets/styles_pajinate.css')
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js')
    script(type="text/javascript", src="/js/jquery.pajinate.js")

    block head
    
  body   
    header
        nav.navbar.navbar-inverse.navbar-fixed-top
            div.container-fluid
                div.navbar-header
                    button(type="button", class="navbar-toggle collapsed", data-toggle="collapse", data-target="#navbar", aria-expanded="false", aria-controls="navbar")
                        span.sr-only Toggle navigation
                        span.icon-bar
                        span.icon-bar
                        span.icon-bar
                    a.navbar-brand(href="/") 
                        img(src="/images/mercasa_logo_50.jpg", alt="Mercasa")
                
                div(id="navbar", class="collapse navbar-collapse")
                    ul.nav.navbar-nav
                        li.active
                            a(href="/") Home
                        li 
                            a(href="/chat") Chat
                        li
                            a(href="/about") About
                        li.dropdown
                            a.dropdown-toggle(data-toggle="dropdown") Product
                                span.caret                                
                            ul.dropdown-menu
                                li 
                                    a(href="/catalog") Catalog
                                li 
                                    a(href="/catalogcreate") Create Product
                                li
                                    a(href="/productfile") Upload File Product
                    ul.nav.navbar-nav.navbar-right
                        -if(!everyauth.loggedIn)
                            li
                                a(href="/register") 
                                    span.glyphicon.glyphicon-user
                                    |Register
                            li
                                a(href="/login")
                                    span.glyphicon.glyphicon-log-in
                                    |Log in
                        -else
                            -if(everyauth.facebook)
                                li Welcome !{everyauth.facebook.user.first_name} !{everyauth.facebook.user.last_name}!
                            -else if(everyauth.twitter)
                                li Welcome !{everyauth.twitter.user.name}!
                            -else if(everyauth.password)
                                li Welcome!
                            li 
                                a(href="/logout") Logout
    #body
        block content
    
    footer.footer
        div.container
            div.float-left
                p.text-muted 
                    &copy; !{(new Date()).getFullYear()} Mercasa
            div.float-right
                ul#social
                    li
                      a(href="https://www.facebook.com/mercasadelivery", class="facebook") Facebook
                      a(href="https://www.facebook.com/mercasadelivery", class="twitter") Twitter

    script(src='js/bootstrap.min.js')